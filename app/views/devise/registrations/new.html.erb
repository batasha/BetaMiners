  <h2>Sign up</h2>
  <%= flash[:notice] %>

  <% resource.build_profile unless resource.profile %>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true%>
      <%= f.input :last_name, required: true %>
      <%= f.input :email, required: true %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <%= f.simple_fields_for :profile do |p| %>
        <%= p.input :birthday, as: :date,
            start_year: Date.today.year - 12,
            end_year: Date.today.year - 90, order: [:month, :day, :year] %>


        <%= p.input :gender, as: :radio_buttons,
        collection: [["Male", "male"], ["Female", "female"]] %>


        <%= p.input :location %>

    <% end %>

    <%= f.input :picture, label: "Upload a profile picture" %>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
