<div class="fields">
  <%= f.input :text, label: "Question" %>
  <%= f.hidden_field :_destroy %>
  <%= link_to_remove_fields "Remove", f %>


  <%= f.simple_fields_for :responses do |r| %>
    <%= render "responses", f: r %>
  <% end %>

  <div class="add"><%= link_to_add_fields "Add Response", f, :responses %></div>
</div>