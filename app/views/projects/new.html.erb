<%= simple_form_for @project do |f| %>
  <h3>Enter Project Details</h3>

  <%= f.input :name %>
  <%= f.input :url %>
  <%= f.input :category, collection: ["Books", "Business", "Finance", "Games",
                                      "Health & Fitness", "Lifestyle", "Music",
                                      "Navigation", "News", "Photography",
                                      "Productivity", "Reference", "Social",
                                      "Sports", "Travel", "Utilities", "Weather"
                                      ] %>
  <%= f.input :description %>
  <%= f.input :private %>

  <div class="control-group string optional">
    <%= f.label :logo, class: "string optional control-label" %>
    <div class="controls">
      <%= f.file_field :logo, class: "string optional" %>
    </div>
  </div>

  <h3>Upload Screenshots:</h3>
  <hr>

      <%= f.simple_fields_for :screenshots do |s| %>
        <div class="control-group string optional">
          <%= s.label :image, class: "string optional control-label" %>
          <div class="controls">
            <%= s.file_field :image, class: "string optional" %>
          </div>
        </div>
        <%= s.input :caption %>
        <hr>
      <% end %>


  <%= f.button :submit %>
<% end %>