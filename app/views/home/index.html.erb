  <div class="row">
    <h1 id="hero-title">BetaMiners</h1>
    <div id="carousel">
      <ul>
        <% for screen in @screens %>
          <li>
            <%= link_to image_tag(screen.image.url(:large)),
                project_path(screen.project) %>
          </li>
        <% end %>
      </ul>

      <div id="carousel-nav">
          <button class="prev">‹</button>
          <button class="next">›</button>
      </div>
    </div>
  </div>

  <div class="marketing">
    <div class="row">

      <div class="span4">
        <%= image_tag "chrome.png", size: "140x140" %>
        <h2>For Developers.</h2>

          <p>Build a team of beta testers from all across the web. Create custom feedback forms for testers to fill out after using your app. View survey results complete with OS and browser stats. Build a better app with user feedback!</p>

        <p><a class="btn" href="#">Learn More</a></p>
      </div>

      <div class="span4">
        <%= image_tag "firefox.png", size: "140x140", class: "img-circle" %>
        <h2>For Testers.</h2>

        <p>Discover cool new projects before they go live. Help developers to build the apps that YOU want to use. Be an early adopter. You were using it before it was cool! </p>

        <p><a class="btn" href="#">Learn More</a></p>
      </div>

      <div class="span4">
        <%= image_tag "safari.png", size: "140x140" %>
        <h2>For the Interwebz.</h2>

        <p>Devs and testers. Building a better internet.</p>

        <p><a class="btn" href="#">Learn More</a></p>
      </div>
    </div>
  </div>


<%= javascript_include_tag "carousel" %>
